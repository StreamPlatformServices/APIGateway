{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "CorsSettings": {
    "AllowedHosts": [ "*" ],
    "AllowedHeaders": [ "*" ],
    "AllowedMethods": [ "*" ]
  },
  "UseSwagger": true,
  "KestrelSettings": {
    "ListeningIPv4Address": "127.0.0.1",
    "PortNumber": 5010,
    "TlsPortNumber": 5011,
    "UseTls": true
  },
  "AuthorizationSettings": {
    "JwtSettings": {
      "Issuer": "auth-api", 
      "Audience": "auth-client" 
    }
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 1000
      },
      {
        "Endpoint": "user/sign-in",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "user",
        "Period": "1m",
        "Limit": 100
      }
    ]
  },
  "ComponentsSettings": {
    "AuthorizationServiceApiSettings": {
      "AuthorizationServiceUrl": "https://localhost:7124"
    },
    "StreamServiceApiSettings": {
      "StreamServiceUrl": "https://..."
    },
    "LicenseServiceClientSettings": {
      "LicenseServiceUrl": "https://localhost:5031"
    },
    "StreamGatewayApiSettings": {
      "StreamGatewayUrl": "https://localhost:5021"
    }
  }
}
